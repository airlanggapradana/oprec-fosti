generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Recruitment {
  id           String    @id @default(auto()) @map("_id") @db.ObjectId
  nama         String
  email        String    @unique
  nim          String    @unique
  no_telepon   String
  gender       Gender
  link_twibbon String
  link_video   String
  alamat       String
  motivasi     String
  fakultas     Fakultas
  prodi        String
  status       Status    @default(PENDING)
  presensi     Presensi?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Presensi {
  id             String          @id @default(auto()) @map("_id") @db.ObjectId
  id_recruitment String          @unique @db.ObjectId
  nama           String
  waktu_datang   DateTime?
  status         StatusPresensi?
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt

  recruitment Recruitment @relation(fields: [id_recruitment], references: [id], onDelete: Cascade, onUpdate: Cascade)
}

enum StatusPresensi {
  HADIR
  TIDAK_HADIR
  IZIN
}

enum Status {
  PENDING
  ACCEPTED
  REJECTED
}

enum Fakultas {
  FKIP
  FEB
  FH
  FT
  FF
  FP
  FG
  FAI
  FIK
  FK
  FKG
  FKI
}

enum Gender {
  LAKI_LAKI
  PEREMPUAN
}
